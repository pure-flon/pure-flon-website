{
  "version": 2,
  "name": "pure-flon-website",
  "builds": [
    {
      "src": "**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "/robots.txt",
      "dest": "/robots.txt"
    },
    {
      "src": "/sitemap.xml",
      "dest": "/sitemap.xml"
    },
    {
      "src": "/css/(.*)",
      "dest": "/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/js/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/images/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/products/medical.html",
      "dest": "/products/medical.html"
    },
    {
      "src": "/products/semiconductor.html",
      "dest": "/products/semiconductor.html"
    },
    {
      "src": "/products/chemical.html",
      "dest": "/products/chemical.html"
    },
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/index.html",
      "dest": "/index.html"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/404-error-page.html",
      "status": 404
    }
  ],
  "headers": [
    {
      "source": "/css/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/js/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://*.supabase.co; frame-src 'none';"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/configurator",
      "destination": "/?redirect=configurator",
      "permanent": false
    },
    {
      "source": "/portal",
      "destination": "mailto:portal@pure-flon.com?subject=고객포털 접근 요청",
      "permanent": false
    },
    {
      "source": "/about",
      "destination": "/?redirect=about",
      "permanent": false
    },
    {
      "source": "/contact",
      "destination": "mailto:info@pure-flon.com?subject=일반 문의",
      "permanent": false
    },
    {
      "source": "/quality",
      "destination": "/?redirect=quality",
      "permanent": false
    },
    {
      "source": "/support",
      "destination": "mailto:support@pure-flon.com?subject=고객지원 요청",
      "permanent": false
    },
    {
      "source": "/careers",
      "destination": "/?redirect=careers",
      "permanent": false
    },
    {
      "source": "/news",
      "destination": "/?redirect=news",
      "permanent": false
    },
    {
      "source": "/downloads",
      "destination": "/?redirect=downloads",
      "permanent": false
    }
  ],
  "functions": {
    "app/api/**": {
      "runtime": "@vercel/node"
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
